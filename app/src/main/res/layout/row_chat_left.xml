<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/messageTv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/background_left_receiver"
        android:maxWidth="270dp"
        android:padding="14dp"
        android:text="@string/a_sample_message"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@id/messageTv1"
        android:alpha="0.5"
        android:text="@string/_9_00_pm"
        android:textColor="@color/white"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/seenTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageTv1"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:text="@string/seen"
        android:textSize="12sp"
        android:visibility="gone">

    </TextView>
</RelativeLayout>